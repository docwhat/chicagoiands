= form_for(@meeting) do |f|
  - if @meeting.errors.any?
    %div{ :id => "error_explanation"}
      %h2
        = pluralize(@meeting.errors.count, "error")
        prohibited this meeting from being saved:

      %ul
        - @meeting.errors.full_messages.each do |msg|
          %li= msg

  %div{ :class => 'field' }
    = f.label :title
    %br/
    = f.text_field :title
  %div{ :class => 'field' }
    = f.label :topic
    %br/
    = f.text_field :topic
  %div{ :class => "field" }
    = f.label :body
    %br/
    = f.text_area :body
  %div{ :class => "field" }
    = f.label :date
    %br/
    = f.date_select :date
  %div{ :class => "actions" }
    = f.submit
